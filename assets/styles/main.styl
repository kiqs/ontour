
$bg = rgba(16,49,90,1)
$font = normal small-caps 18px fantasy
$sidebar_width = 303px
$padding = 14px

/**
 * Search
 */

#search-box
    position fixed
    top 0px
    left 0px
    width 335px
    height 147px
    font-size 0
    margin 15px
    padding 0px
    z-index 15
    background transparent

.tab
    cursor pointer
    padding $padding
    width 137px
    line-height 25pt
    text-align center
    font $font
    display inline-block
    color white
    background rgba(16,49,90,0.5)
    &:hover
        background rgba(16,49,90,1) !important

.active
    background rgba(16,49,90,1) !important

.search-field
    width 307px
    line-height 25pt
    font $font
    display block
    padding 12px
    outline none
    border 0px

.invalid
    background rgba(255,11,0,0.3)

.search-button
    cursor pointer
    padding $padding
    width 150px
    line-height 25pt
    text-align center
    font $font
    display block
    color white
    background $bg
    &:hover
        background #787b7e !important

#artist-info
    position absolute
    top 170px
    left 0px
    height (100% / 1.25)
    overflow-y auto
    overflow-x hidden
    font $font
    color white
    background-color rgba(16,49,90,0.5)
    margin 15px
    z-index 6

#event-item
    position relative
    width $sidebar_width
    height 120px
    padding $padding
    background transparent
    &:hover
        background rgba(16,49,90,0.6)
        cursor pointer

.selected
    background rgba(16,49,90,0.6) !important

.artist-pic
    width 50px
    height 50px
    float left
    margin 30px 15px 5px 0

.artist-data
    margin 5px 5px 5px 80px

.info-block
    display none
    width $sidebar_width
    padding $padding
    text-align center
    background $bg

#go-top
    cursor pointer
    bottom 15px
    width $sidebar_width
    padding $padding
    text-align center
    background transparent
    display none
    z-index 19
    &:hover
        background rgba(16,49,90,0.6) !important

/**
 * Autocomplete
 */

#autocomplete
    display none
    position absolute
    z-index 10
    font $font
    line-height 18pt
    width 331px
    background white

#autocomplete a
    text-decoration none

#autocomplete div
    cursor pointer
    padding 10px
    &:hover
        text-decoration none
        background #dfdfdf !important

.selected-termin
    background #dfdfdf !important

/**
 * Map area
 */

#map-canvas
    position fixed
    top 0px
    left 0px
    width 100%
    height 100%
    margin 0px
    padding 0px
    z-index 2

::-webkit-scrollbar
    width 9px

::-webkit-scrollbar-thumb
    background-color rgba(16,49,90,1)