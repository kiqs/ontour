
$fontSmall = bold small-caps 16px serif
$font 	   = bold small-caps 20px serif
$fontTitle = bold small-caps 25px serif

/**
  * Area
  */

#area
	background url('../registration.jpg')
	background-position bottom left
	top 0px
	left 0px
	width 100%
	height 100%
	position absolute
	overflow hidden

/**
  * Header
  */

#homepage
	position absolute
	top 0px
	right 30px
	z-index 3
	margin-top 30px

#homepage a
	cursor pointer
	padding 14px
	line-height 25pt
	text-align center
	font $font
	text-decoration none
	display inline-block
	color white
	background rgba(16,49,90,0.5)
	&:hover
		background rgba(16,49,90,1) !important

/**
  * Main
  */

main
	position relative
	width 500px
	background #0c1f38

#registration-area
	height 420px
	margin 12% 35%

#login-area
	height 350px
	margin 12% 35%

#success-area
	height 150px
	margin 17% 35%

#forgot-area
	height 280px
	margin 15% 35%

#profile-area
	width 1200px 
	height 780px
	margin 6% 15%

#profile-stuff
	width 550px
	float left

dialog
	position absolute
	margin 13% 22%
	font $fontTitle
	color white

dialog a
	text-decoration none
	color #0c1f38
	padding 12px
	background #cadaee
	&:hover
		background #597077 !important

label, #profile-stuff label
	position relative
	top 50px
	left 50px
	font $fontTitle
	color white
	display inline-block

#profile-stuff label
	font $font
	margin-top 10px

main input
	position relative
	top 50px
	left 50px
	width 75%
	line-height 25pt
	font $font
	display block
	padding 15px
	margin-top 15px
	outline none
	border 0px

#submit
	position relative
	top 50px
	left 50px
	width 200px
	cursor pointer
	padding 15px
	margin-top 15px
	line-height 30pt
	text-align center
	font $font
	outline none
	display inline-block
	color #0c1f38
	border 0px
	background #cadaee
	&:hover
		background #597077 !important

#forgot
	position relative
	top 50px
	left 50px
	width 200px
	cursor pointer
	padding 5px
	margin-top 15px
	line-height 30pt
	text-align center
	font $fontSmall
	outline none
	display inline-block
	color white
	border 0px
	background #0c1f38

.active
	background rgba(16,49,90,1) !important

.error
	position relative
	top 50px
	left 50px
	font $fontSmall
	color white


@-moz-document url-prefix()
	label, dialog
		font bold small-caps 22px serif
	main input, #submit, #homepage a
		font bold small-caps 17px serif
	#forgot
		font bold small-caps 13px serif