
$font = bold small-caps 16px serif

body
	background #c1c6c9

#registration
	position relative
	width 500px
	height 300px
	margin 10% 35%
	background #0c1f38

#email, #password
	position relative
	top 50px
	left 50px
	width 75%
	line-height 25pt
	font $font
	display block
	padding 12px
	outline none
	border 0px

#register
	position relative
	top 50px
	left 50px
	width 200px
	height 50px
	cursor pointer
	padding $padding
	width 150px
	line-height 25pt
	text-align center
	font $font
	display block
	color white
	background rgba(16,49,90,0.5)
	&:hover
		background rgba(16,49,90,1) !important